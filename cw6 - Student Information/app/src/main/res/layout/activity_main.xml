<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7ECEF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stuInfo"
        android:layout_width="335dp"
        android:layout_height="39dp"
        android:layout_above="@+id/stuName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="53dp"
        android:text="Student Information :"
        android:textColor="#1D3557"
        android:textSize="32sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Age"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="33dp"
        android:text="Name :"
        android:textAllCaps="false"
        android:textColor="#E63946"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Age"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Grade"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="33dp"
        android:text="Age :"
        android:textColor="#E63946"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Grade"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="52dp"
        android:text="Grade :"
        android:textColor="#E63946"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stuName"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stuAge"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="34dp"
        android:layout_toEndOf="@+id/Name"
        android:text="TextView"
        android:textColor="#457B9D"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/stuAge"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stuGrade"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="33dp"
        android:layout_toEndOf="@+id/Age"
        android:text="TextView"
        android:textColor="#457B9D"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/stuGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="52dp"
        android:layout_toEndOf="@+id/Grade"
        android:text="TextView"
        android:textColor="#457B9D"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#1D3557"
        android:text="Next Student"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_above="@+id/stuInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="40dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>